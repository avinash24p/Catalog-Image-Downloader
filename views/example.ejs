<script>

    $.ajax({
        url: 'temp.txt',
        type: 'HEAD',
        error: function () {
            $("#popup").modal({
                show: false,
                backdrop: 'static'
            });
        },
        success: function () {
            $("#popup").modal({
                show: true,
                backdrop: 'static'
            });
            startRefresh();
        }
    });



    function startRefresh() {
        console.log('refresh');
        setTimeout(function () {
            window.location = window.location
        }, 10000);

    }


</script>
<script>
    $('#catalog').fileinput({
        allowedFileExtensions: ['xls', 'xlsx']
    });

    $(document).ready(function () {
        $("#btnSubmit").attr("disabled", true);
        $(".fileinput-upload.fileinput-upload-button").hide();
        return true;
    });

    $(".fileinput-remove.fileinput-remove-button").click(function () {
        $("#btnSubmit").attr("disabled", true);
    });

    function checkextension() {

        var file = document.querySelector("#catalog");
        var fileName = file.files[0].name;
        console.log('check value ', file.files[0].name);
        if (/\.(xlsx|xls)$/i.test(file.files[0].name) === false) {

            alert("Not a valid Sheet!");
            $('#catalog').val(null);
        } else if (/\.(xlsx|xls)$/i.test(file.files[0].name) === true) {

            $('#btnSubmit').removeAttr("disabled");
            $.ajax({
                url: 'temp.txt',
                type: 'HEAD',
                error: function () {
                    $("#popup").modal({
                        show: false,
                        backdrop: 'static'
                    });
                },
                success: function () {
                    $("#popup").modal({
                        show: true,
                        backdrop: 'static'
                    });
                    startRefresh();
                }
            });
        }
    }
</script>

